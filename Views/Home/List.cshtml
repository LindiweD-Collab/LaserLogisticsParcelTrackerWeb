@model List<LaserLogisticsParcelTrackerWeb.Models.Parcel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Search Results</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4">
<div class="container">
    <h3>Filtered Results</h3>
    @foreach (var parcel in Model)
    {
        <div class="card mb-3">
            <div class="card-header"><strong>@parcel.TrackingNumber</strong></div>
            <ul class="list-group list-group-flush">
                @foreach (var update in parcel.Updates.OrderByDescending(u => u.Date))
                {
                    <li class="list-group-item">@update.Date.ToShortDateString() - @update.Status</li>
                }
            </ul>
        </div>
    }
</div>
</body>
</html>
